<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity"
    android:background="@drawable/mango_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/title"
            android:textSize="32sp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="college"
            android:textSize="16dp"
            android:layout_marginLeft="24dp"
            android:fontFamily="sans-serif-condensed" />

        <AutoCompleteTextView
            android:id="@+id/actv_college"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select college"
            android:completionThreshold="1"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="branch"
            android:textSize="16dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"/>

        <AutoCompleteTextView
            android:id="@+id/actv_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select branch"
            android:completionThreshold="0"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="semester"
            android:textSize="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginLeft="24dp"
            />

        <AutoCompleteTextView
            android:id="@+id/actv_semester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="select semester"
            android:completionThreshold="0"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"
            />

        <Button
            android:id="@+id/next_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Next"
            android:background="@drawable/mybutton"
            android:elevation="4dp"
            android:layout_margin="16dp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>